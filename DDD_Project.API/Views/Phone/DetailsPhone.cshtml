@model DDD_Project.Domain.Entities.Phone

@{
    ViewData["Title"] = "Phone Details";
}

<h1>Details</h1>

<div>
    <h4>Phone</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country?.Name</dd>
    </dl>
</div>
<div>
    <a asp-action="EditPhone" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Phones">Back to List</a>
</div>